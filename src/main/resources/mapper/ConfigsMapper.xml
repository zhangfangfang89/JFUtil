<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jf.util.dao.ConfigsDao">
    <insert id="insertConfig" useGeneratedKeys="true" keyProperty="id">
        insert into configs(`keys`,`text`,mobile,`password`)
        values(#{keys},#{text},#{mobile},#{password})
    </insert>
    <resultMap id="configdMap" type="Configs">
        <id column="id" property="id"></id>
        <result column="keys" property="keys"></result>
        <result column="password" property="password"></result>
        <result column="mobile" property="mobile"></result>
        <result column="text" property="text"></result>
    </resultMap>
    <select id="queryConfig" resultMap="configdMap">
        select
            id,
            `keys`,
            `password`,
            mobile,
            `text`
        from configs
        where `keys` = #{keys}
    </select>
    <update id="updateConfig">
        update configd
        set `text`=#{text}
        where keys= = #{keys}
    </update>
</mapper>